    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "http-status": "^1.6.2",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.30.1",
    "mongoose": "^7.3.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.13",
    "validator": "^13.9.0",
    "winston": "^3.13.0",
    "xss-clean": "^0.1.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
